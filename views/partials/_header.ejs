<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse w-100" id="navbarNavAltMarkup">
      <div class="navbar-nav d-flex justify-content-between w-100">
        <div class="w-75 d-flex flex-row">
          <a class="nav-item nav-link" href="/urls">My URLs</a>
          <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        </div>
        <div class="w-50 d-flex justify-content-end" >
        <% if (typeof username === "undefined") { %> 
          <a class="nav-item nav-link" href="/login">Login</a>
          <a class="nav-item nav-link" href="/register">Create New Account</a>
        <% } else {%>
          <form class="form-inline float-right" method="POST" action="/logout">
            <div>Logged In As: <%= username.email %> </div>  
            <input class="btn btn-outline-dark ml-3 my-sm-0"type="submit" value="Logout">
          </form>
        </div>
        <% } %>
      </div>
    </div>
  </nav>
</header>
